generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Word {
  id        Int      @id @default(autoincrement())
  word      String
  isReal    Boolean
  createdAt DateTime @default(now())
}

model UserSubmission {
  id        Int      @id @default(autoincrement())
  word      String
  isReal    Boolean
  userEmail String?
  createdAt DateTime @default(now())
}

model GameSession {
  id        Int      @id @default(autoincrement())
  userId    String
  score     Int
  createdAt DateTime @default(now())
}
